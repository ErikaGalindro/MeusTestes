package TestesClass;

import java.util.Random;
import java.util.Scanner;

public class TestesClass4 {
	public static void main(String [] args) {
		Random NumerosAleatorios = new Random();	//Radom - pacote de classe que gera números aleatotios dentro de intevalos específicos.
		@SuppressWarnings("resource") //: Ignora avisos do compilador, permitindo-se suprimir mensagens de erro que podem ser consideradas como "falsos positivos.
		Scanner number = new Scanner(System.in);   // Que no caso era o: number
		
		int numero = NumerosAleatorios.nextInt(100) + 1;
		int tentativas = 0;
		int palpite;
		
		System.out.println ("Vamos brincar?" + "\n" + "Tente adivinhar o numero, é de 1 a 100. ");
		
		do {
			tentativas++;
			System.out.print( tentativas + "º Tentativa:");
			palpite = number.nextInt();
			
			if ( palpite < numero) {
				System.out.println("O número é maior");
			} else if (palpite > numero) {
				System.out.println("O número é menor");
			} else {
				System.out.println("Você acertou em: " + tentativas + " tentativas, uaal!" + "\n" + "Parabens!!");
			}
		} while (palpite != numero && tentativas < 10);
		
		if (palpite != numero) {
			System.out.println("Uma pena, você perdeu." + "\n" + "O número era:" + numero);
		}
		}
}
